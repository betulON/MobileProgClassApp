<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:clickable="true">

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:rowCount="4"
        android:columnCount="2"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/linearLayoutProfile"
            android:layout_margin="2sp"
            android:orientation="vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#728a74"
            android:clickable="false">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/ic_profile"
                android:clickable="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#fff"
                android:textSize="18sp"
                android:clickable="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutAdd"
            android:layout_margin="2sp"
            android:orientation="vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#cb707f">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/ic_add"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Add Question"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutList"
            android:layout_margin="2sp"
            android:orientation="vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#a180a4">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/ic_list"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="List Questions"
                android:textColor="#fff"
                android:textSize="18sp" />


        </LinearLayout>




        <LinearLayout
            android:id="@+id/linearLayoutCreateExam"
            android:layout_margin="2sp"
            android:orientation="vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#8eb9b9">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/ic_create_exam"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Create Exam"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutExamSettings"
            android:layout_margin="2sp"
            android:orientation="vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#9d997e">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/ic_settings" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Exam Settings"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutLogOut"
            android:layout_margin="2sp"
            android:orientation="vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#7a7ca9">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/ic_log_out"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Log Out"
                android:textColor="#fff"
                android:textSize="18sp" />


        </LinearLayout>




    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

