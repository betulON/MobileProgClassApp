<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E8EA"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/questionCardCheckBox"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_gravity="center"></CheckBox>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="vertical"
            android:background="#DDDDDD"
            android:layout_weight="1">
            <TextView
                android:id="@+id/questionCardQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:padding="3dp"
                android:textSize="12dp"
                android:text="Question: ">
            </TextView>
            <TextView
                android:id="@+id/questionCardAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="#F4F4F4"
                android:textSize="10dp"
                android:text="Answer: ">
            </TextView>
            <TextView
                android:id="@+id/questionCardOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E6E6E6"
                android:padding="3dp"
                android:textSize="10dp"
                android:text="Option: ">
            </TextView>
            <TextView
                android:id="@+id/questionCardOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="#E6E6E6"
                android:textSize="10dp"
                android:text="Option: ">
            </TextView>
            <TextView
                android:id="@+id/questionCardOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E6E6E6"
                android:padding="3dp"
                android:textSize="10dp"
                android:text="Option: ">
            </TextView>
            <TextView
                android:id="@+id/questionCardOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="#E6E6E6"
                android:textSize="10dp"
                android:text="Option: ">
            </TextView>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>